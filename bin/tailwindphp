#!/usr/bin/env php
<?php

/**
 * TailwindPHP CLI
 *
 * Generate Tailwind CSS with PHP - no Node.js required.
 *
 * Usage:
 *   tailwindphp build -c "./templates" -o "./dist/styles.css"
 *   tailwindphp watch -c "./templates" -o "./dist/styles.css"
 *   tailwindphp init
 *   tailwindphp cache:clear
 *
 * @see https://github.com/dnnsjsk/tailwindphp
 */

declare(strict_types=1);

// Find autoloader
$autoloaderPaths = [
    // Installed as a dependency (vendor/dnnsjsk/tailwindphp/bin/tailwindphp)
    __DIR__ . '/../../../autoload.php',
    // Development (bin/tailwindphp from project root)
    __DIR__ . '/../vendor/autoload.php',
];

$autoloaderFound = false;
foreach ($autoloaderPaths as $path) {
    if (file_exists($path)) {
        require_once $path;
        $autoloaderFound = true;
        break;
    }
}

if (!$autoloaderFound) {
    fwrite(STDERR, "Error: Could not find Composer autoloader.\n");
    fwrite(STDERR, "Please run 'composer install' first.\n");
    exit(1);
}

// Run the CLI application
$app = new TailwindPHP\Cli\Application();
$exitCode = $app->run();

exit($exitCode);
