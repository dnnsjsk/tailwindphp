        "inputCss": "@theme inline {\n          --spacing: 0.25rem;\n        }\n\n        .foo {\n          margin: --spacing(4);\n        }",
        "classes": [],
        "expected": "\".foo {\n        margin: 1rem;\n      }\""
    },
