        "inputCss": "@theme {\n          --spacing: 0.25rem;\n        }\n\n        .foo {\n          margin: --spacing(4);\n        }",
        "classes": [],
        "expected": "\":root, :host {\n        --spacing: .25rem;\n      }\n\n      .foo {\n        margin: calc(var(--spacing) * 4);\n      }\""
    },
