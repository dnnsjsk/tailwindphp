{
    "preset": "psr12",
    "rules": {
        "array_syntax": {
            "syntax": "short"
        },
        "single_quote": true,
        "no_unused_imports": true,
        "ordered_imports": {
            "sort_algorithm": "alpha"
        },
        "trailing_comma_in_multiline": {
            "elements": ["arrays", "arguments", "parameters"]
        },
        "blank_line_before_statement": {
            "statements": ["return"]
        }
    },
    "exclude": [
        "vendor",
        "reference"
    ]
}
